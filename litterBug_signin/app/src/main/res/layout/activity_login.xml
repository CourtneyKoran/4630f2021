<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".LoginActivity"
    android:background="@drawable/bb"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="@color/colorWhite"
        android:text="Login"
        android:id="@+id/logo"/>

    <EditText android:background="@drawable/input_bg"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/inputEmail"
        app:layout_constraintEnd_toEndOf="@+id/inputEmail"
        android:textColor="@color/colorWhite"
        android:id="@+id/inputPassword"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail"
        app:layout_constraintHorizontal_bias="1.0"
        android:textColorHint="@color/colorWhite"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_person"
        android:layout_marginTop="16dp"/>

    <EditText android:background="@drawable/input_bg"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorWhite"
        android:id="@+id/inputEmail"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColorHint="@color/colorWhite"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:inputType="textPersonName"
        android:hint="Email"
        android:ems="10"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/inputPassword"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:text="Forgot Password?"
        android:id="@+id/forgotPassword"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword"
        android:layout_marginTop="16dp"/>

    <Button android:background="@drawable/btn_bg"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/inputPassword"
        app:layout_constraintEnd_toEndOf="@+id/inputPassword"
        android:text="Login" android:id="@+id/btnlogin"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword"
        android:layout_marginTop="24dp"/>


    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/btnlogin"
        app:layout_constraintEnd_toEndOf="@+id/btnlogin"
        android:id="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/btnlogin"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:orientation="horizontal"
        android:gravity="center">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Dont have an Account?"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/colorRed"
        android:text="SignUp"
        android:id="@+id/textViewSignUp"/>

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>