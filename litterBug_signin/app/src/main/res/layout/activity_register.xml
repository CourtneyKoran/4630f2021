<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/bb" tools:context=".RegisterActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

<TextView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintVertical_bias="0.13"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textStyle="bold"
    android:textSize="36sp"
    android:textColor="@color/colorWhite"
    android:text="Register"
    android:id="@+id/logo"/>

<EditText android:background="@drawable/input_bg"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textColor="@color/colorWhite"
    android:id="@+id/inputUsername"
    app:layout_constraintTop_toBottomOf="@+id/logo"
    android:textColorHint="@color/colorWhite"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:inputType="textPersonName"
    android:hint="Username"
    android:ems="10"
    android:drawablePadding="10dp"
    android:drawableLeft="@drawable/ic_person"
    android:layout_marginEnd="32dp"
    android:layout_marginTop="40dp"
    android:layout_marginStart="32dp"/>

<EditText android:background="@drawable/input_bg"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    app:layout_constraintStart_toStartOf="@+id/inputUsername"
    app:layout_constraintEnd_toEndOf="@+id/inputUsername"
    android:textColor="@color/colorWhite"
    android:id="@+id/inputEmail"
    app:layout_constraintTop_toBottomOf="@+id/inputUsername"
    android:textColorHint="@color/colorWhite"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:inputType="textPersonName"
    android:hint="Email"
    android:ems="10"
    android:drawablePadding="10dp"
    android:drawableLeft="@drawable/ic_email"
    android:layout_marginTop="16dp"/>

<EditText android:background="@drawable/input_bg"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    app:layout_constraintStart_toStartOf="@+id/inputEmail"
    app:layout_constraintEnd_toEndOf="@+id/inputEmail"
    android:textColor="@color/colorWhite"
    android:id="@+id/inputPassword"
    app:layout_constraintTop_toBottomOf="@+id/inputEmail"
    android:textColorHint="@color/colorWhite"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:inputType="textPersonName"
    android:hint="******"
    android:ems="10"
    android:drawablePadding="10dp"
    android:drawableLeft="@drawable/ic_security"
    android:layout_marginTop="16dp"/>

<EditText android:background="@drawable/input_bg"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    app:layout_constraintStart_toStartOf="@+id/inputPassword"
    app:layout_constraintEnd_toEndOf="@+id/inputPassword"
    android:textColor="@color/colorWhite"
    android:id="@+id/inputConformPassword"
    app:layout_constraintTop_toBottomOf="@+id/inputPassword"
    android:textColorHint="@color/colorWhite"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:inputType="textPersonName"
    android:hint="******"
    android:ems="10"
    android:drawablePadding="10dp"
    android:drawableLeft="@drawable/ic_security"
    android:layout_marginTop="16dp"/>

<Button android:background="@drawable/btn_bg"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    app:layout_constraintStart_toStartOf="@+id/inputConformPassword"
    app:layout_constraintEnd_toEndOf="@+id/inputConformPassword"
    android:text="Register" android:id="@+id/btnRegister"
    app:layout_constraintTop_toBottomOf="@+id/inputConformPassword"
    android:layout_marginTop="24dp"/>

<TextView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="@+id/btnRegister"
    app:layout_constraintEnd_toEndOf="@+id/btnRegister"
    android:textColor="@color/colorWhite"
    android:text="Already Have an Account?"
    android:id="@+id/alreadyHaveAccount"
    app:layout_constraintTop_toBottomOf="@+id/btnRegister"
    android:layout_marginTop="16dp"
    android:shadowColor="@color/colorWhite"/>

</androidx.constraintlayout.widget.ConstraintLayout>